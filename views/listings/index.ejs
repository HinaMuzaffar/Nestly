                       <div class="icons"><i class="fa-solid fa-person-shelter"></i></div>
                        <p class="text">Cabin</p> 
                      </div>
                      
       <div class="filter" data-category="Adventure"> 
         <div class="icons"><i class="fa-solid fa-campground"></i></div> 
          <p class="text">Adventure</p> 
